{
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strict": true,
      "sourceMap": true,
      "baseUrl": "./src",
      "pretty": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
